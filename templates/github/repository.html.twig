{% extends 'base.html.twig' %}

{% block title %}Github profile{% endblock %}

{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px/1.5 sans-serif;
	}

	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="album py-5" id="france">
	<div class="container">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
	


			{% for repo in repos %}
			<div class="col">
				<div class="card shadow-sm h-100">
					<div class="card-body">
						<h5 class="card-title">{{ repo.name }}</h5>
						{% for topic in repo.topics %}
							<span class="badge bg-warning float-right">{{ topic }}</span>
						{% endfor %}
						<p class="card-text">{{ repo.description }}</p>
						<span class="badge bg-primary float-right">{{ repo.visibility }}</span>
						fork:{{ repo.forks }}
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div>

{% endblock %}